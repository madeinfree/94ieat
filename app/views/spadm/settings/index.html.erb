<!-- Left Side Navigation -->
<%= render 'common/sp_leftside' %>
<!-- Content -->
<div id="wrapper" class="full">
  <div id="content" class="max">
    <div class="components">
      <ol class="breadcrumb">
        <li>
          <%= link_to spadm_root_url do %>
          <span class="icon-home"></span> 首頁
          <% end %>
        </li>
        <li class="active">全站設定</li>
      </ol>
      <h3>全站設定</h3>
      <div class="row">
        <div class="col-xs-12 col-md-8"><p>
          <div class="panel panel-default">
            <div class="panel-heading">站台資訊</div>
            <div class="panel-body">
              <form class="form-horizontal" role="form">
                <div class="form-group">
                  <label class="col-sm-2 control-label">Title</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="<%= @settings.title %>" readonly="readonly">
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label">SEO</label>
                  <div class="col-sm-10">
                    <%= @settings.seo %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label">Keyword</label>
                  <div class="col-sm-10">
                    <%= @settings.keyword %>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-md-4"><p>
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                  <div class="form-group">
                    <%= link_to '修改設定', edit_spadm_setting_path(1) %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
</div>