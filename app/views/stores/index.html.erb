<!-- Left Side Navigation -->
<%= render 'common/leftside' %>
<!-- Content -->
<div id="wrapper">
  <div class="hidden-xs" id="map" style='width: 50%; float:left; height: 100%; z-index:-1;'></div>
  <div id="content" class="mob-max">
    <%= render 'list_filter' %>
    <div class="resultsList">
      <div class="row">
        <% @stores.each do |store| %>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
          <%= link_to store_path(store), class: :'card' do %>
          <div class="figure">
            <img src="/assets/images/prop/5-1.png" alt="image">
            <div class="figCaption">
              <div>每日限量訂購數</div>
              <span class="icon-eye"> 184</span>
              <span class="icon-heart"> 120</span>
              <span class="icon-bubble"> 18</span>
            </div>
            <div class="figView"><span class="icon-eye"></span></div>
            <div class="figType">
              <%= status(store.status.to_i) %>
            </div>
          </div>
          <h2><%= store.name %></h2>
          <div class="cardAddress"><span class="icon-pointer"></span><%= store.address %></div>
          <div class="clearfix"></div>
          <% end %>
        </div>
        <% end %>
      </div>
      <%= will_paginate @stores, renderer: BootstrapPagination::Rails,
      :inner_window => '3',
      :outer_window => '-2'  %>
    </div>
  </div>
  <div class="clearfix"></div>
</div>
<%= render 'common/map' %>