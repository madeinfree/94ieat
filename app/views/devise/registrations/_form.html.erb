<div class="modal fade in" id="signup" role="dialog" aria-labelledby="signupLabel" aria-hidden="false" style="display: block;">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="signupLabel">Sign Up</h4>
      </div>
      <div class="modal-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true) do |f| %>
        <%= devise_error_messages! %>
<!--         <div class="form-group">
          <div class="btn-group-justified">
            <a href="explore.html" class="btn btn-lg btn-facebook"><span class="fa fa-facebook pull-left"></span>Sign Up with Facebook</a>
          </div>
        </div>
        <div class="form-group">
          <div class="btn-group-justified">
            <a href="explore.html" class="btn btn-lg btn-google"><span class="fa fa-google-plus pull-left"></span>Sign Up with Google</a>
          </div>
        </div> -->
        <div class="signOr">OR</div>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: "form-control",
          placeholder: '輸入您的信箱'
          %>
        </div>
        <div class="form-group">
          <% if @validatable %>
          <em>(密碼至少輸入8個字元的英文＋數字)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control",placeholder: '輸入您的密碼'
          %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control",placeholder: '確認您的密碼'  %>
        </div>
        <div class="form-group">
          <div class="btn-group-justified">
            <%= f.submit "註冊"  %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    
  </div>
</div>